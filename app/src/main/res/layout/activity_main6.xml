<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#035106"
    tools:context=".MainActivity6">

    <Button
        android:id="@+id/btn"
        android:layout_width="120dp"
        android:layout_height="64dp"
        android:layout_marginStart="273dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="72dp"
        android:backgroundTint="#0B0A0A"
        android:onClick="avancar"
        android:text="Avançar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.878"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup5"
        app:layout_constraintVertical_bias="0.89" />

    <TextView
        android:id="@+id/textView14"

        android:layout_width="316dp"
        android:layout_height="70dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="27dp"
        android:background="#14EDE9E9"
        android:lineSpacingExtra="2sp"
        android:text="5) Um operador de empilhadeira, além de dirigir deve saber detectar os defeitos na empilhadeira; Por quê?"
        android:textColor="#F8F5F5"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <RadioGroup
        android:id="@+id/radioGroup5"
        android:layout_width="314dp"
        android:layout_height="213dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.57">

        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#20F4F0F0"
            android:buttonTint="#F60B0B"
            android:onClick="onRadioButtonClicked"
            android:text=" Antes que estes se tornem maiores e perigosos;"
            android:textColor="#F8F4F4"
            android:textSize="16sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3C0E0E0E"
            android:buttonTint="#F80606"
            android:onClick="onRadioButtonClicked"
            android:text="Para não prejudicar a produtividade do operador;"
            android:textColor="#F4EEEE"
            android:textSize="16sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1DF4EEEE"
            android:buttonTint="#F80808"
            android:onClick="onRadioButtonClicked"
            android:text="Para não atrasar o carregamento;"
            android:textColor="#EFE8E8"
            android:textSize="16sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="#390B0A0A"
            android:buttonTint="#F40606"
            android:onClick="onRadioButtonClicked"
            android:text="Antes que estes defeitos se tornem maiores ou perigosos, diminuindo o custo de parada da máquina."
            android:textColor="#F1EAEA"
            android:textSize="16sp"
            android:textStyle="italic" />
    </RadioGroup>

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="417dp"
        android:layout_height="24dp"
        android:progress="50"
        android:progressTint="#8BC34A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>