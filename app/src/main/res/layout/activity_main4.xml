<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#035106"
    tools:context=".MainActivity4">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="317dp"
        android:layout_height="196dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59000003">

        <RadioButton
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#17FAF6F6"
            android:buttonTint="#F40606"
            android:onClick="onRadioButtonClicked"
            android:text="CNH cat.D e o crachá daempresa;"
            android:textColor="#ECE8E8"
            android:textSize="16sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#140C0C0C"
            android:buttonTint="#F40505"
            android:onClick="onRadioButtonClicked"
            android:text="Qualquer documento deidentidade;"
            android:textColor="#F6EDED"
            android:textSize="16sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#22F4EFEF"
            android:buttonTint="#F30505"
            android:onClick="onRadioButtonClicked"
            android:text="Um cartão de identificação, com onome e fotografia, em lugar visível"
            android:textColor="#ECE1E1"
            android:textSize="16sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2A191818"
            android:buttonTint="#F60303"
            android:onClick="onRadioButtonClicked"
            android:text="Todas as respostas acima."
            android:textColor="#EFE7E7"
            android:textSize="16sp"
            android:textStyle="italic" />
    </RadioGroup>

    <Button
        android:id="@+id/btn"
        android:layout_width="107dp"
        android:layout_height="65dp"
        android:layout_marginStart="273dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#121111"
        android:onClick="avancar"
        android:text="avançar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="321dp"
        android:layout_height="92dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="27dp"
        android:background="#14EDE9E9"
        android:lineSpacingExtra="2sp"
        android:text="3) Os operadores de equipamentos de transporte motorizado deverão ser habilitados e sópoderão dirigir se durante o horário de trabalho portarem:"
        android:textColor="#F6F2F2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="417dp"
        android:layout_height="24dp"
        android:progress="30"
        android:progressTint="#8BC34A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>